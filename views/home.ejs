<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Board</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --background-color: #f8f9fc;
        --foreground-color: #ffffff;
        --text-color: #343a40;
        --input-border-color: #dee2e6;
        --button-bg-color: #007bff;
        --button-hover-bg-color: #0056b3;
        --message-border-color: rgba(0, 0, 0, 0.1);
      }

      [data-theme="dark"] {
        --background-color: #181a1b;
        --foreground-color: #242526;
        --text-color: #f1f1f1;
        --input-border-color: #3e4042;
        --button-bg-color: #ff5100;
        --button-hover-bg-color: #c4683a;
        --message-border-color: rgba(255, 255, 255, 0.1);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
        padding: 40px;
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: background-color 0.3s, color 0.3s;
      }

      .title {
        font-size: 3rem;
        font-weight: 600;
        margin-bottom: 40px;
        position: relative;
        display: inline-block;
      }

      .title::before {
        content: "";
        position: absolute;
        width: 50px;
        height: 4px;
        background-color: var(--button-bg-color);
        bottom: -10px;
        left: 0;
        border-radius: 2px;
      }

      form {
        background-color: var(--foreground-color);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 40px var(--message-border-color);
        width: 100%;
        max-width: 600px;
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 40px;
        transition: background-color 0.3s, box-shadow 0.3s;
      }

      label {
        font-size: 1.1rem;
        font-weight: 500;
      }

      input {
        padding: 14px 18px;
        font-size: 1rem;
        border: 1px solid var(--input-border-color);
        border-radius: 8px;
        transition: border-color 0.3s, box-shadow 0.3s;
        background-color: var(--foreground-color);
        color: var(--text-color);
      }

      input:focus {
        outline: none;
        border-color: var(--button-bg-color);
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
      }

      button {
        padding: 14px;
        font-size: 1.2rem;
        font-weight: 500;
        background-color: var(--button-bg-color);
        color: #ffffff;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
      }

      button:hover {
        background-color: var(--button-hover-bg-color);
        transform: translateY(-2px);
      }

      .message-container {
        background-color: var(--foreground-color);
        padding: 25px;
        margin-bottom: 25px;
        border-radius: 15px;
        box-shadow: 0 8px 30px var(--message-border-color);
        width: 100%;
        max-width: 600px;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease-in-out, box-shadow 0.3s;
      }

      .message-container:hover {
        box-shadow: 0 12px 50px var(--message-border-color);
        transform: translateY(-5px);
      }

      .message-container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 6px;
        background: linear-gradient(to right, var(--button-bg-color), #6610f2);
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
      }

      .message-container h2 {
        font-size: 1.6rem;
        font-weight: 600;
        margin-bottom: 10px;
      }

      .message-container p {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 20px;
      }

      .message-container h5 {
        font-size: 0.9rem;
        text-align: right;
      }

      .theme-toggle {
        position: absolute;
        top: 20px;
        right: 20px;
        background: var(--button-bg-color);
        color: #fff;
        border: none;
        padding: 10px 15px;
        border-radius: 50px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      .theme-toggle:hover {
        background: var(--button-hover-bg-color);
      }

      @media (max-width: 768px) {
        .title {
          font-size: 2.5rem;
        }

        form,
        .message-container {
          width: 90%;
        }
      }
    </style>
  </head>
  <body>
    <button class="theme-toggle" id="theme-toggle">ðŸŒ™</button>

    <h1 class="title">Awesome Mini-Board</h1>

    <form method="POST" action="/new">
      <label for="name">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Enter your name"
        required
      />

      <label for="msg">Message</label>
      <input
        type="text"
        id="msg"
        name="msg"
        placeholder="Write your message"
        required
      />

      <button type="submit">Post</button>
    </form>

    <% data.forEach(msg => { %>
    <div class="message-container">
      <h2><%= msg.user %></h2>
      <p><%= msg.text %></p>
      <h5><%= msg.added %></h5>
    </div>
    <% }) %>

    <script>
      const toggleButton = document.getElementById("theme-toggle");
      const body = document.body;

      toggleButton.addEventListener("click", () => {
        const currentTheme = body.getAttribute("data-theme");

        if (currentTheme === "dark") {
          body.setAttribute("data-theme", "light");
          toggleButton.textContent = "ðŸŒ™";
        } else {
          body.setAttribute("data-theme", "dark");
          toggleButton.textContent = "ðŸŒž";
        }
      });
    </script>
  </body>
</html>
