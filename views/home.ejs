<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Board</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        background-color: #f8f9fc;
        padding: 40px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .title {
        font-size: 3rem;
        font-weight: 600;
        color: #343a40;
        margin-bottom: 40px;
        position: relative;
        display: inline-block;
      }

      .title::before {
        content: "";
        position: absolute;
        width: 50px;
        height: 4px;
        background-color: #007bff;
        bottom: -10px;
        left: 0;
        border-radius: 2px;
      }

      form {
        background-color: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 40px;
      }

      label {
        font-size: 1.1rem;
        font-weight: 500;
        color: #495057;
      }

      input {
        padding: 14px 18px;
        font-size: 1rem;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        transition: border-color 0.3s, box-shadow 0.3s;
      }

      input:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
      }

      button {
        padding: 14px;
        font-size: 1.2rem;
        font-weight: 500;
        background-color: #007bff;
        color: #ffffff;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
      }

      button:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
      }

      .message-container {
        background-color: white;
        padding: 25px;
        margin-bottom: 25px;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 600px;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
      }

      .message-container:hover {
        box-shadow: 0 12px 50px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
      }

      .message-container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 6px;
        background: linear-gradient(to right, #007bff, #6610f2);
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
      }

      .message-container h2 {
        font-size: 1.6rem;
        font-weight: 600;
        color: #343a40;
        margin-bottom: 10px;
      }

      .message-container p {
        font-size: 1.1rem;
        color: #495057;
        line-height: 1.6;
        margin-bottom: 20px;
      }

      .message-container h5 {
        font-size: 0.9rem;
        color: #868e96;
        text-align: right;
      }

      @media (max-width: 768px) {
        .title {
          font-size: 2.5rem;
        }

        form,
        .message-container {
          width: 90%;
        }
      }
    </style>
  </head>
  <body>
    <h1 class="title">Awesome Mini-Board</h1>

    <form method="POST" action="/new">
      <label for="name">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Enter your name"
        required
      />

      <label for="msg">Message</label>
      <input
        type="text"
        id="msg"
        name="msg"
        placeholder="Write your message"
        required
      />

      <button type="submit">Post</button>
    </form>

    <% data.forEach(msg => { %>
    <div class="message-container">
      <h2><%= msg.user %></h2>
      <p><%= msg.text %></p>
      <h5><%= msg.added %></h5>
    </div>
    <% }) %>
  </body>
</html>
